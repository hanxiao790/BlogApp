<% include ./partials/header %>
<div class="main-container">

    <div class="ui main text container segment">
        <div class="ui huge header">Post a new blog</div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label for="title">Title</label>
                <input id="title" type="text" name="blog[title]">
            </div>

            <div class="field">
                <label for="image">Image</label>
                <input id="image" type="text" name="blog[image]">
            </div>

            <div class="field">
                <label for="content">Blog content</label>
                <!--<input id="content" type="text" name="blog[body]" placeholder="Blog content">-->
                <textarea id="content" name="blog[body]"></textarea>
            </div>

            <div class="field">
                <!--<input class="ui primary button" type="submit">-->
                <button class="ui primary button" type="submit">POST</button>
            </div>
            <div class="clearfix"></div>

        </form>
    </div>

</div>

