<% include ./partials/header.ejs %>

<div class="main-container">

    <div class="ui main text container segment">
        <div class="ui huge header">Update blog</div>

        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label for="title">Title</label>
                <input id="title" type="text" name="blog[title]" value="<%= blog.title %>">
            </div>

            <div class="field">
                <label for="image">Image</label>
                <input id="image" type="text" name="blog[image]" value="<%= blog.image %>">
            </div>

            <div class="field">
                <label for="content">Blog content</label>
                <textarea id="content" name="blog[body]"><%= blog.body %></textarea>
            </div>

            <div class="field">
                <button class="ui primary button" type="submit">UPDATE</button>
            </div>
            <div class="clearfix"></div>

        </form>
    </div>

</div>

<% include ./partials/footer.ejs %>

